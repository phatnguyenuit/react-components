{
  "name": "react-component-workspace",
  "private": true,
  "scripts": {
    "build": "lerna run build-rollup --scope @phatnguyenuit/react-components",
    "build:watch": "lerna run watch-rollup --scope @phatnguyenuit/react-components",
    "pack": "lerna exec --scope @phatnguyenuit/react-components -- npm pack"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "lerna": "^4.0.0"
  }
}
